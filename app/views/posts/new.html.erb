
<div class='larger_outer'>
<div class='titleouter'>
    <div class='bamboo_title'>
    
    <%= image_tag('index/멋사로고.png',class:'logo_size')  %>
    LIKE LION BAMBOO IN SKKU
    </div>
</div>


<!--            -->

<div class='body'>
    
<%= form_for @post do |f| %>
    <%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name") %><br>
   <%= f.label :name %><br>
 <%= f.text_field :name %><br>
   <%= f.label :content %><br>
   <%= f.text_area :content %><br>
   <%= f.submit %><br><br>
<% end %>


</div>

</div>


<section class='body'>
<% @posts.each do |post| %>

    <div class="panel panel-default">
     <div class="panel-heading">
       <h5 style='float: right'><%= post.created_at.strftime('%Y %B %-d') %></h5>
       <h3 class="panel-title"> <%= post.id %>번째 글입니다              |    <%= post.name %>님의 제보</h3>
     </div>
     <div class="panel-body">
       <%= post.content %>
     </div>
   </div>

<% end %>

 </section>